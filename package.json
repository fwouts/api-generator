{
  "name": "apidef",
  "author": "Francois Wouts <f@zenc.io>",
  "private": true,
  "scripts": {
    "build": "tsc && webpack && cp build/cli.bundle.js.map dist/ && echo \"#!/usr/bin/env node\\n\" | cat - build/cli.bundle.js > dist/cli.bundle.js",
    "publishnow": "yarn build && cd dist && yarn publish --access=public",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint --project tsconfig.json --fix",
    "generate-grammar": "antlr4ts -no-listener src/grammar/ApiDef.g4"
  },
  "jest": {
    "rootDir": "src",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "antlr4ts-cli": "^0.4.0-alpha.4",
    "husky": "^0.15.0-rc.13",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13"
  },
  "dependencies": {
    "@types/commander": "^2.12.2",
    "@types/node": "^9.6.1",
    "antlr4ts": "0.4.0-alpha.4",
    "commander": "^2.15.1",
    "textbuilder": "^1.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts!example/*.ts": [
      "tslint --project tsconfig.json --fix",
      "git add"
    ]
  }
}
